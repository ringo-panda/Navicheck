<div class="row my-3">
  <div class="col-sm-6">
    <h2>選考状況一覧・追加</h2>
  </div>
</div>

<div class="row mb-3 offset-sm-1">
  <%= form_with model:@selection_status do |f| %>
    <div class="form-row align-items-center">
      <div class="col-sm-auto">
        <%= f.text_field :status_name, placeholder: "選考状況", class:"form-control" %>
      </div>
      <div class="col-sm-auto">
        <%= f.submit "追加する", class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-10">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th style="width: 70%">選考状況</th>
          <th style="width: 15%"></th>
          <th style="width: 15%"></th>
        </tr>
      </thead>
      <tbody>
        <% @selection_statuses.each do |status| %>
          <tr>
            <td><%= status.status_name %></td>
            <td><%= link_to "編集する", edit_selection_status_path(status.id), class:"btn btn-success" %></td>
            <% if status.edit_permission == true %>
            <td><%= link_to "削除する", selection_status_path(status.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
