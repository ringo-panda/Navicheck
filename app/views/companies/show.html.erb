<div class="row my-3">
</div>

<div class="row my-3">
  <div class="col-sm-10">
    <h2><%= @company.company_name %>の詳細</h2>
  </div>
  <div class="col-sm-1 offset-sm-1">
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle"
              type="button" id="dropdownMenu1" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-cog"></i>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <%= link_to "編集する", edit_company_path(@company.id), class:"dropdown-item" %>
        <div class="dropdown-divider"></div>
        <%= link_to "削除する", company_path(@company.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"dropdown-item" %>
      </div>
    </div>
  </div>
</div>

<div class="row ">
  <div class="col-sm-12">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th style="width:20%">業界</th>
          <td style="width:80%"><%= @company.industry.industry_name %></td>
        </tr>
        <tr>
          <th>選考状況</th>
          <td><%= @company.selection_status.status_name %></td>
        </tr>
        <tr>
          <th>志望度</th>
          <td><%= @company.wish_degree.wish_degree_name %></td>
        </tr>
        <tr>
          <th>企業サイトURL</th>
          <td><%= link_to nil, @company.company_cite_url, target:"_blank", rel:"noopener noreferrer" %></td>
        </tr>
        <tr>
          <th>採用サイトURL</th>
          <td><%= link_to nil, @company.recruit_cite_url, target:"_blank", rel:"noopener noreferrer"  %></td>
        </tr>
        <tr>
          <th>採用サイトユーザー名</th>
          <td><%= @company.recruit_cite_username  %></td>
        </tr>
        <tr>
          <th>採用サイトパスワード</th>
          <td><%= @company.recruit_cite_password  %></td>
        </tr>
        <tr>
          <th>所在地</th>
          <td><%= @company.location %></td>
        </tr>
        <tr>
          <th>メモ</th>
          <td><%= @company.company_memo %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row my-3">
  <div class="col-sm-12">
    <h2>職種一覧</h2>
  </div>
</div>

<div class="row mb-3 ml-1">
  <%= link_to "新規登録",new_job_category_path, class:"btn btn-info col-sm-2" %>
</div>


<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th style="width: 90%">職種</th>
          <th style="width: 10%"></th>
        </tr>
      </thead>
      <tbody>
        <% @company.job_categories.each do |post| %>
          <tr>
            <td><%= link_to post.job_name, job_category_path(post.id) %></td>
            <td>
              <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle"
                        type="button" id="dropdownMenu1" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-cog"></i>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  <%= link_to "編集する", edit_job_category_path(post.id), class:"dropdown-item" %>
                  <div class="dropdown-divider"></div>
                  <%= link_to "削除する", job_category_path(post.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"dropdown-item" %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="row my-3">
  <div class="col-sm-12">
    <h2><%= @company.company_name %>のイベント一覧</h2>
  </div>
</div>

<div class="row mb-3 ml-1">
  <%= link_to "新規登録",new_event_path, class:"btn btn-info col-sm-2" %>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th style="width: 70%">イベント名</th>
          <th style="width: 20%">カテゴリ</th>
          <th style="width: 10%"></th>

        </tr>
      </thead>
      <tbody>
        <% @company.events.each do |post| %>
          <tr>
            <td><%= link_to post.event_name, event_path(post.id) %></td>
            <td><%= post.event_category.event_category_name %></td>
            <td>
              <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle"
                        type="button" id="dropdownMenu1" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-cog"></i>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
                  <%= link_to "編集する", edit_event_path(post.id), class:"dropdown-item" %>
                  <div class="dropdown-divider"></div>
                  <%= link_to "削除する", event_path(post.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"dropdown-item" %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
